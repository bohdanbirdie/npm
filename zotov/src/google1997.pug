doctype html
html
    head(lang="en")
        meta(charset="UTF-8")
        title Google-1997
        link(href="https://fonts.googleapis.com/css?family=Libre+Franklin" rel="stylesheet")
        link(href="css/style.css" rel="stylesheet")
        // bower:css
